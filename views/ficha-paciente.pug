doctype html
html(lang="pt-br")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title HealthSync - #{user.name}
        link(rel="stylesheet", href="./../styles/style.css")
        link(rel="shortcut icon", href="./../assets/favicon.ico", type="image/x-icon")
        script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
        script(src="https://kit.fontawesome.com/1d41b3ab2c.js", crossorigin="anonymous")
    body.w-screen.bg-branco
        header.header.flex.flex-row.justify-center.items-center.py-10.px-8
            div.flex.flex-row.justify-center.items-center.gap-4.font-barlow.font-bold.tracking-wider.text-gray-700.drop-shadow-md(class="w-[80%]")
                img.imgId.rounded-full.border-2.border-solid.border-amarelo.shadow-xl(src=`./../assets/${user.photo}`, alt="", class="w-[30%]", data-id=user._id)
                ul.flex.flex-col.justify-center.items-center
                    li=user.name 
                    li=user.speciality 
                    li=`${user.city} - ${user.state}`     
            div.flex.flex-col.justify-center.items-center(class="w-[20%]")
                img(src="./../assets/logo.png", alt="", class="w-[85%]")
        main.main.flex.flex-col.justify-center.items-center.pb-10.w-full.px-6
            h2.font-barlow.font-bold.tracking-wider.text-azul.text-2xl.pb-4=paciente.pacienteId.name
            div.flex.flex-row.justify-center.items-center.w-full
                div.flex.flex-col.justify-center.items-center.text-gray-700.gap-3(class="w-[60%]")
                    div.flex.flex-col.justify-center.items-start.gap-1.font-poppins.text-gray-700(class="w-[75%]")
                        p.font-bold IDADE
                        p=paciente.pacienteId.age + ' anos'
                    div.flex.flex-col.justify-center.items-start.gap-1.font-poppins.text-gray-700(class="w-[75%]")
                        p.font-bold TEL.
                        p=paciente.pacienteId.phone
                    div.flex.flex-col.justify-between.items-start.w-full.pl-6
                        p.font-bold EMAIL 
                        p=paciente.pacienteId.email
                    div.flex.flex-col.justify-between.items-start.w-full.pl-6
                        p.font-bold PLANO 
                        p=paciente.pacienteId.healthPlan
                div.flex.flex-col.justify-center.items-center.gap-8(class="w-[40%]")
                    img.rounded-full.border-2.border-solid.border-amarelo(src=`./../assets/${paciente.pacienteId.photo}`, alt="", class="w-[85%]")
                    a.text-gray-50.px-4.py-2.bg-azul.shadow-lg.text-lg.font-bold.rounded-lg(href=`/historico/${paciente.pacienteId._id}`) HISTÓRICO          
            div.flex.flex-col.justify-center.items-center.font-poppins.text-gray-700.w-full.gap-4.bg-white.p-4.shadow-xl.mt-8.rounded-lg
                h3.font-bold.drop-shadow-lg.text-xl CONSULTA
                div.flex.flex-row.justify-evenly.items-center(class="w-[80%]")
                    p=paciente.day
                    p=paciente.hour + ' hr.'
                div.flex.flex-col.justify-center.items-start.gap-2(class="w-[85%]")
                    p.font-bold SINTOMAS
                    p=paciente.reason
            a.mt-8.text-gray-50.px-4.py-2.bg-azul.shadow-xl.text-lg.font-bold.flex.flex-row.justify-center.items-center.gap-3.rounded-lg(href=`/novo-prontuario/${paciente.pacienteId._id}?consulta=${paciente._id}`)
                p PRONTUÁRIO
                i(class="fa-solid fa-notes-medical")
