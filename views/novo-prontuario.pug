doctype html
html(lang="pt-br")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title HealthSync - #{user.name}
        link(rel="stylesheet", href="./../styles/style.css")
        link(rel="shortcut icon", href="./../assets/favicon.ico", type="image/x-icon")
        script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
        script(src="https://kit.fontawesome.com/1d41b3ab2c.js", crossorigin="anonymous")
        script(type="module", defer, src="./../js/novoProntuario.js") 
    body.w-screen.bg-branco
        header.header.flex.flex-row.justify-center.items-center.py-10.px-8
            div.flex.flex-row.justify-center.items-center.gap-4.font-barlow.font-bold.tracking-wider.text-gray-700.drop-shadow-md(class="w-[80%]")
                img.imgId.rounded-full.border-2.border-solid.border-amarelo.shadow-xl(src=`./../assets/${user.photo}`, alt="", class="w-[30%]", data-id=user._id)
                ul.flex.flex-col.justify-center.items-center
                    li=user.name 
                    li=user.speciality 
                    li=`${user.city} - ${user.state}`     
            div.flex.flex-col.justify-center.items-center(class="w-[20%]")
                img(src="./../assets/logo.png", alt="", class="w-[85%]")
        main.main.flex.flex-col.justify-center.items-center.pb-10.w-full.px-6.gap-6
            div.flex.flex-col.justify-center.items-center.gap-2(class="w-[80%]")
                h2.font-barlow.font-bold.text-azul.tracking-wider.text-2xl.drop-shadow-lg Prontuário
                p.font-poppins.text-gray-700.text-sm.font-bold.flex.flex-row.gap-2 Cód.
                    span.cod.font-normal=consulta._id
                div.flex.flex-row.justify-center.items-center.font-poppins.text-gray-700.text-sm.w-full
                    p.date=`${consulta.day} - ${consulta.hour} hrs.`
            div.flex.flex-row.justify-center.items-start.gap-5.font-poppins.text-gray-700.text-sm.border-y.border-solid.border-gray-700.py-6(class="w-[80%]")
                div.flex.flex-col.justify-center.items-start.gap-1(class='w-[50%]')
                    p.font-bold PACIENTE
                    p.pacientId(data-pacienteId=paciente._id)=paciente.name
                div.flex.flex-col.justify-center.items-start.gap-1(class='w-[50%]')
                    p.font-bold PLANO
                    p.pacientHealthPlan(data-pacienteId=paciente._id)=paciente.healthPlan
            form.form.flex.flex-col.justify-center.items-center.font-poppins.text-gray-700.text-sm(action="#",class="w-[80%]") 
                div.flex.flex-col.justify-center.items-start.w-full.gap-2
                    p.font-bold.self-center ANAMNESE
                    div.flex.flex-row.justify-between.items-center.gap-2.w-full                    
                        div.anamnese__container.flex.flex-col.justify-center.items-start.gap-2.w-full
                            p.font-bold SINTOMAS
                            input.input__sintomas.p-2(type="text", name="", class="")
                            p.font-bold INÍCIO 
                            input.input__inicio.p-2(type="text", name="")                  
                        i.addAnamnese(class="fa-solid fa-comment-medical text-gray-50 bg-azul p-3 text-2xl rounded-full ")
                div.flex.flex-col.justify-center.items-start.w-full.gap-2.my-6.py-6.border-y.border-solid.border-gray-700
                    p.font-bold.self-center.mb-2 DIAGNÓSTICO
                    div.flex.flex-row.justify-between.items-center.gap-2.w-full                    
                        div.diagnostico__container.flex.flex-col.justify-center.items-start.gap-2.w-full
                            p.font-bold PRINCIPAL
                            input.input__diagnostico.p-2(type="text", name="", class="")                 
                        i.addDiagnostico(class="fa-solid fa-comment-medical text-gray-50 bg-azul p-3 text-2xl rounded-full ")
                div.flex.flex-col.justify-center.items-start.w-full.gap-2.mb-6.pb-6.border-b.border-solid.border-gray-700
                    p.font-bold.self-center.mb-2 TRATAMENTO
                    div.flex.flex-row.justify-between.items-center.gap-2.w-full                    
                        div.flex.flex-col.justify-center.items-start.gap-2.w-full
                            p.font-bold RECOMENDAÇÕES
                            textarea.input__recomendacao.p-2(name="", cols="24", rows="3")
                            div.flex.flex-row.justify-between.items-center.w-full
                                div.prescription__container.flex.flex-col.justify-center.items-start.gap-2
                                    p.font-bold MEDICAMENTO 
                                    input.input__medicamento.p-2(type="text", name="")
                                    p.font-bold DOSAGEM 
                                    input.input__dosagem.p-2(type="text", name="")        
                                    p.font-bold PERÍODO 
                                    input.input__periodo.p-2(type="text", name="")  
                                i.addTratamento(class="fa-solid fa-comment-medical text-gray-50 bg-azul p-3 text-2xl rounded-full ")
                div.flex.flex-col.justify-center.items-start.w-full.gap-2.mb-6.pb-6.border-b.border-solid.border-gray-700
                    p.font-bold.self-center.mb-2 EXAMES
                    div.flex.flex-row.justify-between.items-center.gap-2.w-full                    
                        div.exame__container.flex.flex-col.justify-center.items-start.gap-2.w-full
                            p.font-bold CATEGORIA
                            input.input__categoria.p-2(type="text", name="", class="") 
                            p.font-bold RESULTADOS
                            textarea.input__resultados.p-2(name="", cols="24", rows="3")               
                        i.addExame(class="fa-solid fa-comment-medical text-gray-50 bg-azul p-3 text-2xl rounded-full ")
                div.flex.flex-col.justify-center.items-start.w-full.gap-2.mb-6.pb-6
                    p.font-bold.self-center.mb-2 OBSERVAÇÕES                   
                    textarea.input__observacao.p-2.self-center(name="", cols="24", rows="3")
                input.submit.text-gray-50.bg-azul.px-4.py-2.shadow-xl.text-xl.font-bold.tracking-wider(type="submit", value="SUBMETER")
        div.sucess.flex.flex-col.w-full.justify-center.items-center.gap-3.font-poppins.hidden
            img.rounded-xl(src="./../assets/prontuario.png", alt="")
            h3.tracking-wider.text-gray-700.text-xl.drop-shadow-md.text-center(class="w-[80%]") Prontuário criado com sucesso! 
            a.bg-azul.px-4.py-2.shadow-xl.font-bold.my-6.tracking-wider.text-gray-50.text-lg(href="/pacientes") RETONAR 
        footer.w-full.bg-azul.flex.flex-row.justify-center.py-3.mt-8
            img(src="./../assets/hapvida.png", alt="",class="w-[70%]") 

                        






